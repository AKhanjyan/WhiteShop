# ========================================
# APP CONFIGURATION
# ========================================

NODE_ENV=development

APP_URL=http://localhost:3000
API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# ========================================
# DATABASE (PostgreSQL)
# ========================================
DATABASE_URL=postgresql://postgres:599621262@localhost:5432/shop_dev?schema=public

# ========================================
# DATABASE (MongoDB)
# ========================================
MONGODB_URI=mongodb://localhost:27017/shop

# ========================================
# REDIS (Cache & Queues)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ========================================
# MEILISEARCH
# ========================================
MEILI_HOST=http://localhost:7700
MEILI_MASTER_KEY=your-master-key-here

# ========================================
# S3 / R2
# ========================================
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_ACCESS_KEY=your-access-key-id
S3_SECRET_KEY=your-secret-access-key
S3_BUCKET=shop-media
S3_REGION=auto
S3_PUBLIC_URL=https://cdn.shop.am

# ========================================
# PAYMENTS
# ========================================
IDRAM_MERCHANT_ID=your-merchant-id
IDRAM_SECRET_KEY=your-secret-key
IDRAM_PUBLIC_KEY=your-public-key
IDRAM_API_URL=https://banking.idram.am/api/v1
IDRAM_TEST_MODE=true

ARCA_MERCHANT_ID=your-merchant-id
ARCA_API_KEY=your-api-key
ARCA_API_URL=https://ipay.arca.am/payment/rest
ARCA_TEST_MODE=true

# ========================================
# EMAIL
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@shop.am
SMTP_PASSWORD=your-email-password
SMTP_FROM_NAME=MyShop
SMTP_FROM_EMAIL=noreply@shop.am

# ========================================
# AUTHENTICATION
# ========================================
JWT_SECRET=your-jwt-secret-minimum-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-minimum-32-chars

SESSION_SECRET=your-session-secret-minimum-32-chars
SESSION_MAX_AGE=604800

# ========================================
# DEVELOPMENT ONLY
# ========================================
DEBUG=true
MOCK_PAYMENTS=true
PRISMA_STUDIO_PORT=5555
